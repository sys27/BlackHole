<Window x:Class="BlackHole.Views.SymbolStatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика символів" Width="480" Height="270"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TabControl x:Name="tabControl" />
        
        <Grid Grid.Row="1" Background="#FFEFEFEF" Height="39">
            <Button Content="OK" HorizontalAlignment="Right" Margin="0,10,8,8" Padding="8,0,8,0" MinWidth="75" IsCancel="True" IsDefault="True" />
        </Grid>
    </Grid>
</Window>
